<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:elevation="10dp">

    <RelativeLayout
        android:id="@+id/menu_project_address_rl"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:id="@+id/menu_scan_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:cardCornerRadius="10dp"
            tools:cardBackgroundColor="@color/colorAccent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/menu_scan_down_qr_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:padding="10dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_main_tool_bar_head_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    app:border_color="#ffffff"
                    app:border_width="2dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_project_address_head_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/menu_project_address_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-385dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_menu_head"
        app:border_color="#ffffff"
        app:border_width="2dp" />
</RelativeLayout>