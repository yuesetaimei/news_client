<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="auto_swith_night_mode"
        android:summary="@string/start"
        android:title="@string/auto_switch_night_mode" />

    <PreferenceCategory
        android:dependency="auto_swith_night_mode"
        android:title="@string/time" />

    <Preference
        android:dependency="auto_swith_night_mode"
        android:key="auto_night"
        android:title="@string/auto_night_start_time" />

    <Preference
        android:dependency="auto_swith_night_mode"
        android:key="auto_day"
        android:title="@string/auto_day_start_time" />

</PreferenceScreen>