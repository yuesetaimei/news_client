<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/base_setting">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="switch_noWifiLoadImg"
            android:summary="@string/only_wifi_load"
            android:title="@string/no_pic_mode" />

        <Preference
            android:key="auto_nightMode"
            android:summary="@string/set_switch_time"
            android:title="@string/auto_switch_night_mode" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="nav_btn"
            android:summary="@string/slide_btn_hide"
            android:title="@string/navigation_btn" />

        <Preference
            android:key="text_size"
            android:summary="@string/set_text_size"
            android:title="@string/text_size" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/video_setting">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="video_force_landscape"
            android:summary="@string/start_force_land_play_video"
            android:title="@string/full_screen_play" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="video_auto_play"
            android:summary="@string/only_wifi_auto_play_video"
            android:title="@string/auto_play_video" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="video_auto_down"
            android:summary="@string/only_wifi_auto_down_video"
            android:title="@string/video_down" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/other_set">

        <com.tlkg.news.app.ui.view.ThemePreference
            android:key="theme_color"
            android:summary="@string/cursor_theme_color"
            android:title="@string/theme_color" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/slidable"
            android:entryValues="@array/slidableValues"
            android:key="slidable"
            android:negativeButtonText="@string/cancel"
            android:summary="@string/similar_ios_slide_back"
            android:title="@string/slide_back" />

        <Preference
            android:key="clear_cache"
            android:title="@string/clear_cache" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about">

        <Preference
            android:key="version"
            android:title="@string/version" />

        <Preference
            android:key="licenses"
            android:title="@string/licenses" />

        <Preference
            android:key="source_code"
            android:summary="https://github.com/wuxiaoqi123/news_client"
            android:title="@string/souce_code" />

        <Preference
            android:key="copy_right"
            android:summary="@string/only_study"
            android:title="@string/copy_right" />
    </PreferenceCategory>

</PreferenceScreen>